@{
  Layout = "_Layout";
}

<h1>Current Style</h1>

@using BOTW.Models;
@model List<BOTW.Models.Style>;

@if (@Model.Count == 0)
{
  <h3>There are no Styles currently</h3>
}

@foreach (Style style in Model)
{
  <li>@Html.ActionLink($"{style.Name}", "Details", new { id = style.StyleId })</li>
}

<p>@Html.ActionLink("Add a new Style", "Create")</p>