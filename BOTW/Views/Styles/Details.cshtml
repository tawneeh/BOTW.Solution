@{
  Layout = "_Layout";
}

@model BOTW.Models.Style;

<h3>Style Details</h3>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntries.Count == 0)
{
  <p>No one is rocking this style.....yet</p>
}
else
{
  <h4>Characters rocking this style:</h4>
  <ul>
  @foreach(var join in Model.JoinEntries)
  {
    <li>@join.Character.Name</li>
  }
  </ul>
}

<table>
  <li>@Html.ActionLink("Back to Styles", "Index")</li>
  <li>@Html.ActionLink("Edit Style", "Edit", new { id = Model.StyleId })</li>
  @if(@Model.JoinEntries.Count == 0)
  {
  <li>@Html.ActionLink("Delete Style", "Delete", new { id = Model.StyleId })</li>
  }
</table>