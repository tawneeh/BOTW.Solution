@{
  Layout = "_Layout";
}

@using BOTW.Models;
@using Microsoft.EntityFrameworkCore;
@using Microsoft.AspNetCore.Mvc.Rendering;
@model List<BOTW.Models.Character>;
@using BOTW.Controllers;

<h1>Current Characters</h1>

@if (@Model.Count == 0)
{
  <h3>There are no Characters currently</h3>
}

@foreach (Character character in Model)
{
  <li>@Html.ActionLink($"{character.Name}", "Details", new { id = character.CharacterId })</li>
}

<p>@Html.ActionLink("Add a new Character", "Create")</p>